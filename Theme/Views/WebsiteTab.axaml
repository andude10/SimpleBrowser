<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:webview="clr-namespace:WebViewControl;assembly=WebViewControl.Avalonia"
		xmlns:views="clr-namespace:SimpleBrowser.Views">
	<StyleInclude Source="avares://SimpleBrowser/Theme/Constants.axaml"/>
	<StyleInclude Source="avares://SimpleBrowser/Theme/Views/TopPanel.axaml"/>
	
	<Design.PreviewWith>
		<views:WebsiteTab Width="500" Height="500"></views:WebsiteTab>
	</Design.PreviewWith>
	
	<Style Selector="views|WebsiteTab">
		<Setter Property="Margin" Value="0,-7.5,0,0"/>
		<Setter Property="Content">
			<Template>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="50"></RowDefinition>
						<RowDefinition></RowDefinition>
					</Grid.RowDefinitions>
					<views:TopPanel Grid.Row="0"></views:TopPanel>
					<webview:WebView 
							Address="{Binding CurrentAddress}"
							Grid.Row="1">
					</webview:WebView>
				</Grid>
			</Template>
		</Setter>
	</Style>
</Styles>
