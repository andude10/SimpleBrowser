<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:views="clr-namespace:SimpleBrowser.Views"
			 xmlns:webview="clr-namespace:WebViewControl;assembly=WebViewControl.Avalonia"
             x:Class="SimpleBrowser.Views.WebsiteTab"
			 xmlns:i="using:Avalonia.Xaml.Interactivity"
			 xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
			 xmlns:ic="using:Avalonia.Xaml.Interactions.Custom"
			 Margin="0,-7.5,0,0">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50"></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
		<views:TopPanel Grid.Row="0"></views:TopPanel>
		<webview:WebView
				x:Name="webView"
				Address="{Binding CurrentAddress}"
				Grid.Row="1">
			<i:Interaction.Behaviors>
				<ia:EventTriggerBehavior EventName="Navigated" SourceObject="{Binding #webView}">
					<ia:InvokeCommandAction Command="{Binding ChangeTitle}"></ia:InvokeCommandAction>
				</ia:EventTriggerBehavior>
			</i:Interaction.Behaviors>
		</webview:WebView>
	</Grid>
</UserControl>
