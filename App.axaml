<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:SimpleBrowser"
             x:Class="SimpleBrowser.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

	<Application.Styles>
		<StyleInclude Source="avares://SimpleBrowser/Theme/Generic.axaml"></StyleInclude>
		<FluentTheme Mode="Light"/>
		
		<Style Selector="TabItem[IsSelected=true] /template/ Border#PART_SelectedPipe">
			<Setter Property="IsVisible" Value="False" />
			<Setter Property="Background" Value="White"/>
			<Setter Property="TextBlock.Foreground" Value="White"/>
		</Style>
	</Application.Styles>
</Application>
